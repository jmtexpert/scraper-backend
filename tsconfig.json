{
  "compilerOptions": {
    "target": "ES2022", // modern JS, better

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true, // ✅ generate .d.ts

    "sourceMap": false, // turn off in prod

    "removeComments": true, // ✅ clean build
    "noImplicitAny": true, // stricter typing
    "noUnusedLocals": true, // detect dead code
    "noUnusedParameters": true, // detect unused

    "noFallthroughCasesInSwitch": true, // safety in switch
    "incremental": false // disable incremental
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "**/*.spec.ts"]
}
